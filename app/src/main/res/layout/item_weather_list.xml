<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="item"
            type="com.app.data.model.WeatherResponse.Data" />
    </data>

    <com.google.android.material.card.MaterialCardView
        style="@style/myCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_temp"
                style="@style/normalText.Large.Bold"
                android:layout_width="@dimen/zeroDp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:maxLines="2"
                android:gravity="center"
                tools:text="25 C"
                android:text="@{@string/temp(item.temp)}"
                app:layout_constraintStart_toStartOf="@id/tv_date"
                app:layout_constraintEnd_toEndOf="@id/tv_date"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_date"
                style="@style/normalText"
                android:layout_width="@dimen/zeroDp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:maxLines="2"
                tools:text="july 25 2020"
                dateTimeStamp="@{item.time}"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_temp"
                app:layout_constraintBottom_toBottomOf="parent"
                />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_wind"
                style="@style/normalText.small"
                android:layout_width="@dimen/zeroDp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:maxLines="2"
                android:gravity="center"
                tools:text="25 C"
                android:text="@{@string/rain(item.rain)}"
                app:drawableStartCompat="@drawable/ic_rain"
                android:drawablePadding="5dp"
                app:layout_constraintTop_toTopOf="@id/tv_temp"
                app:layout_constraintEnd_toStartOf="@id/tv_dist"
                app:layout_constraintBottom_toBottomOf="@id/tv_temp"
                android:layout_marginEnd="10dp"
                />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_dist"
                style="@style/normalText"
                android:layout_width="@dimen/zeroDp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:maxLines="2"
                android:gravity="center"
                app:drawableStartCompat="@drawable/ic_wind"
                android:drawablePadding="5dp"
                android:text="@{@string/wind(item.wind)}"
                tools:text="25 C"
                app:layout_constraintTop_toTopOf="@id/tv_wind"
                app:layout_constraintBottom_toBottomOf="@id/tv_wind"
                app:layout_constraintEnd_toEndOf="parent"
                />




        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>
